<% set_meta_tags description: "#{@user.nickname}さんが実績を解除しました！",
                 og: {
                   description: :description,
                   url: user_bookmark_url(@user, @bookmark),
                   image: images_ogp_url(params: { text: @bookmark.achievement.title })
                 } %>
<br>
<%= image_tag(images_ogp_path(params: { text: @bookmark.achievement.title }), class: "img-fluid") %>
<br>
<br>
<div class="row">
  <div class="col-12">
    <h4><%= @user.nickname %> さんが実績を解除しました！</h4>
  </div>
</div>
<hr>
<div class="row">
  <% if current_user %>
    <% if @user == current_user %>
      <div class="col-sm-12 col-lg-6">
        <%= link_to 'みんなの実績を見る', achievements_path, class: "btn btn-outline-secondary btn-block" %>
      </div>
      <div class="col-sm-12 col-lg-6">
          <%= link_to '自分の実績を見る', user_path(current_user), class: "btn btn-outline-success btn-block" %>
      </div>
    <% else %>
      <div class="col-sm-12 col-lg-4">
        <%= link_to "#{@user.nickname} さんの実績を見る", user_path(@user), class: "btn btn-outline-primary btn-block" %>
      </div>
      <div class="col-sm-12 col-lg-4">
        <%= link_to 'みんなの実績を見る', achievements_path, class: "btn btn-outline-secondary btn-block" %>
      </div>
      <div class="col-sm-12 col-lg-4">
          <%= link_to '自分の実績を見る', user_path(current_user), class: "btn btn-outline-success btn-block" %>
      </div>
    <% end %>
  <% else %>
    <div class="col-sm-12 col-lg-4">
      <%= link_to "#{@user.nickname} さんの実績を見る", user_path(@user), class: "btn btn-outline-primary btn-block" %>
    </div>
    <div class="col-sm-12 col-lg-4">
      <%= link_to 'みんなの実績を見る', achievements_path, class: "btn btn-outline-secondary btn-block" %>
    </div>
    <div class="col-sm-12 col-lg-4">
        <%= link_to 'Twitterでログイン', '/auth/twitter', class: "btn btn-outline-success btn-block" %>
    </div>
  <% end %>
</div>
