      <%= render 'bookmarks', { bookmarks: @unlocked_bookmarks } %>
    </div>
  </div>
  <div class="tab-pane fade" id="pills-locked" role="tabpanel" aria-labelledby="pills-locked-tab">
    <div class="row">
      <%= render 'bookmarks', { bookmarks: @locked_bookmarks } %>
    </div>
  </div>
</div>
