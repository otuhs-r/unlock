<h4 class="header">新しい実績</h4>
<%= form_with(model: @achievement, url: achievements_path, method: :post, local: true) do |form| %>
  <div class="row">
    <div class="col-12">
      <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
      </div>
      <br>
      <%= form.label :tag_list %>
      <div class="chips">
      </div>
      <%= form.hidden_field :tag_list %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-5">
      <div class="actions">
        <%= form.submit '作成 & 実績解除', class: "btn red" %>
        <%= form.submit '作成のみ', class: "btn", name: "only_create" %>
      </div>
    </div>
  </div>
<% end %>
