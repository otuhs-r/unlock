<br>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <%= link_to 'ホーム', root_path, class: "breadcrumb-item" %>
    <li class="breadcrumb-item active" aria-current="page">実績一覧</li>
  </ol>
</nav>

<div class="row">
  <div class="col-12">
  <%= link_to '実績を登録する', new_achievement_path, class: "btn btn-success" %>
  </div>
</div>
<hr>
<div class="row">
  <% @achievements.each do |achievement| %>
    <% unless achievement.users.include?(current_user) %>
      <div class="col-12">
        <div class="card">
          <div class="card-header"><%= achievement.title %></div>
          <div class="card-body">
            <%= button_to 'ブックマーク', user_bookmarks_path(current_user), params: { bookmark: { achievement_id: achievement.id } }, class: "btn btn-primary" if current_user %>
          </div>
        </div>
        <br>
      </div>
    <% end %>
  <% end %>
</div>
