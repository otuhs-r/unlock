<div class="card-content">
  <%= link_to achievement_path(achievement) do %>
    <span class="card-title"><%= achievement.title %></span>
  <% end %>
  <% achievement.tags.each do |tag| %>
    <%= link_to "##{tag.name}", tag_path(tag), class: "chip" %>
  <% end %>
</div>
<% if current_user %>
  <div class="card-action">
    <% if achievement.users.include?(current_user) %>
      <span class="grey-text text-darken-1 valign-wrapper"><i class="material-icons">folder_special</i>ストック済</span>
    <% else %>
      <%= link_to user_bookmarks_path(current_user, params: { bookmark: { achievement_id: achievement.id } }), method: :post, remote: true, class: "valign-wrapper" do %>
        <i class="material-icons">folder</i>ストックする
      <% end %>
    <% end %>
  </div>
<% end %>
